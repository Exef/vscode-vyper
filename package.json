{
    "name": "vscode-vyper",
    "displayName": "Vyper",
    "description": "Vyper (Ethereum) support for VS Code",
    "version": "0.0.1",
    "publisher": "p-",
    "keywords": [
        "vyper",
        "ethereum",
        "blockchain"
    ],
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:vyper",
        "onCommand:vyper.buildContract"
    ],
    "main": "./out/vyperMain",
    "contributes": {
        "commands": [
            {
                "command": "vyper.buildContract",
                "title": "Vyper: Build Contract"
            }
        ],
        "languages": [
            {
                "id": "vyper",
                "aliases": [
                    "Vyper",
                    "vyper"
                ],
                "extensions": [
                    ".vy",
                    ".v.py"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vyper",
                "scopeName": "source.vyper",
                "path": "./syntax/MagicPython.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}